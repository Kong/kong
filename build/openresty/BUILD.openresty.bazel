    "@kong//:wasmx_flag": [
        "--add-module=$$EXT_BUILD_ROOT$$/external/ngx_wasm_module",
    ],
    "//conditions:default": [],
}) + select({
    "@kong//:wasmx_v8": [
        "--with-cc-opt=\"-I$$EXT_BUILD_ROOT$$/external/v8/include\"",
        "--with-ld-opt=\"-L$$EXT_BUILD_ROOT$$/external/v8/lib\"",
        "--with-ld-opt=\"-Wl,-rpath,$$EXT_BUILD_ROOT$$/external/v8/lib\"",
    ],
    "//conditions:default": [],
}) + select({
    "@kong//:wasmx_wasmer": [
        "--with-cc-opt=\"-I$$EXT_BUILD_ROOT$$/external/wasmer/include\"",
        "--with-ld-opt=\"-L$$EXT_BUILD_ROOT$$/external/wasmer/lib\"",
        "--with-ld-opt=\"-Wl,-rpath,$$EXT_BUILD_ROOT$$/external/wasmer/lib\"",
    ],
    "//conditions:default": [],
}) + select({
    "@kong//:wasmx_wasmtime": [
        "--with-cc-opt=\"-I$$EXT_BUILD_ROOT$$/external/wasmtime/include\"",
        "--with-ld-opt=\"-L$$EXT_BUILD_ROOT$$/external/wasmtime/lib\"",
        "--with-ld-opt=\"-Wl,-rpath,$$EXT_BUILD_ROOT$$/external/wasmtime/lib\"",
    ],
    "//conditions:default": [],
})

