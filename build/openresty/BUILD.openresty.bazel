        "--with-endian=le",
        "--with-int=4",
        "--with-long=8",
        "--with-long-long=8",
        "--with-ptr-size=8",
        "--with-sig-atomic-t=4",
        "--with-size-t=8",
        "--with-off-t=8",
        "--with-time-t=8",
        "--with-sys-nerr=132",
    ],
    "//conditions:default": [],
}) + select({
    "@kong//:any-cross": [
        "--with-cc-opt=\"-I$$EXT_BUILD_DEPS$$/zlib/include\"",
        "--with-ld-opt=\"-L$$EXT_BUILD_DEPS$$/zlib/lib\"",
    ],
    "//conditions:default": [],
}) + select({
