  "scripts": {
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint \"**/*.{js,ts}\"",
    "test-spec": "mocha \"test/gateway/**/${npm_config_spec}.spec.ts\"",
    "test-gateway": "TEST_APP=gateway mocha \"test/gateway/**/*.spec.ts\"",
